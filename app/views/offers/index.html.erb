<div class="container border border-3 border-primary rounded-3" style="margin-top: 20px;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Organisation</th>
        <th scope="col">Title</th>
        <th scope="col">Link</th>
        <th scope="col">Date</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% i = 1  %>
      <% @offers.each do |offer|  %>
        <tr>
          <th scope="row">
            <a class="btn btn-outline-primary" href="<%= offer_path(offer) %>" role="button"><%= i %></a>
          </th>
          <td class="m-0"><%= offer.orga %></td>
          <td><%= offer.title %></td>
          <td><a class="btn btn-primary" href="<%= offer.details_link %>" role="button">Link</a></td>
          <td><%= offer.date_post.strftime("%d/%m/%Y Ã  %Hh") %></td>
          <td>
            <a href="<%= edit_offer_path(offer) %>"><i class="fas fa-edit"></i></a>
            <a data-method="delete" href="<%= offer_path(offer) %>"><i class="fas fa-trash-alt"></i></a>
            <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/offers/<%= offer.id %>"><%=  %>
              Delete the spoon
            </a>
          </td>
        </tr>
        <% i += 1 %>
      <% end  %>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center my-3">
  <a class="btn btn-primary" href="/offers/search" role="button">Discover new offers</a>
</div>