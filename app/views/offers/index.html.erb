<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Orga</th>
        <th scope="col">Title</th>
        <th scope="col">Link</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% i = 1  %>
      <% @offers.each do |offer|  %>
        <tr>
          <th scope="row"><%= i %></th>
          <td><%= offer.orga %></td>
          <td><%= offer.title %></td>
          <td><a class="btn btn-primary" href="<%= offer.link %>" role="button">Link</a></td>
          <td>
            <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>  /  <a href="#">Delete <i class="far fa-trash-alt"></i></a>
          </td>
        </tr>
        <% i += 1 %>
      <% end  %>
    </tbody>
  </table>
</div>